<odoo>
    <record id="view_formio_component_server_api_form" model="ir.ui.view">
        <field name="name">formio.component.server.api form</field>
        <field name="model">formio.component.server.api</field>
        <field name="arch" type="xml">
	    <form string="Component Server API Form" create="false">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <group colspan="2">
                        <field name="code" widget="ace" options="{'mode': 'python'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
